      <Image
        class="rounded-full w-16 h-16 sm:h-auto sm:w-1/5 md:w-4/5 aspect-square"
        src={profile}
        alt="picture of me"
      />
      <div class="flex flex-col">
        <div class="font-bold text-xl mt-4 md:mt-0 w-full">
          Cedric Vanhaverbeke
        </div>
        <div class="font-light -mt-2">Fullstack Developer</div>
      </div>
    </div>
